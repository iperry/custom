[color]
   diff = auto
   status = auto
   branch = auto
   interactive = auto
   ui = true
   pager = true

[core]
   pager = less -FRSX
   whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
   autocrlf = input

[alias]
   ci = commit -v
   co = checkout
   dp = diff --patience

[merge]
   tool = meld

[push]
   default = tracking

[user]
   useConfigOnly = true
   name = Perry Hung

[alias]
   fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"
